                        <input type="text" name="id" value={{value.id}} hidden>
                        <button type="submit" name="save" class="btn btn-info btn-sm">Afficher</button>
                    </form>
                </td> #}
            </tr>

			{% endfor %}

    </table>

</section>

{% endblock %}
